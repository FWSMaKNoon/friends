<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="container" style="max-width: 500px; margin-top: 100px;">
  <div class="card">
    <div class="card-header text-center">
      <h3>Log in</h3>
    </div>
    <div class="card-body">
      <form>
          <!-- Email -->
          <div class="mb-3">
            <%= f.label :email, class:"form-label" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Enter your email" %>
          </div>

          <!-- Password -->
          <div class="mb-3">
            <%= f.label :password, class:"form-label" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"Enter your password" %>
          </div>

          <!-- Remember Me -->
          <% if devise_mapping.rememberable? %>
            <div class="mb-3 form-check">
              <%= f.check_box :remember_me, class:"form-check-input" %>
              <%= f.label :remember_me, class:"form-check-label" %>
            </div>
          <% end %>
      
          <!-- Submit Button -->
          <%= f.submit "Log in", class:"btn btn-primary w-100" %>
     
        <%= render "devise/shared/links" %>
      </form>
    </div>
  </div>
</div>
<% end %>


