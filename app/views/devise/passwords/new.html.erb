 <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<div class="container" style="max-width: 400px; margin-top: 100px;">
    <div class="card">
      <div class="card-header text-center">
        <h3>Forgot your password</h3>
      </div>
      <div class="card-body">
        <form action="/reset_password" method="POST">
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="mb-3">
              <%= f.label :email, class:"form-label" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Enter your email"%>
            </div>
            <div class="actions">
              <%= f.submit "Send me reset password instructions", class:"btn btn-primary w-100" %>
            </div>
        </form>
        <div class="mt-3 text-center">
          <%= link_to "Log In", new_user_session_path, class:"text-decoration-none"%>
        </div>
      </div>
    </div>
  </div>
<% end %>