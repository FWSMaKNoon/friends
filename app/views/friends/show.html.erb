<div class="jumbotron">
  <h1 class="display-4">
    <%= @friend.full_name %>
  </h1>
  <p class="lead">
    <%= @friend.email %>  | 
    <%= @friend.phone %>  |  
    <%= @friend.facebook %>

  </p>
  <br/>
</div>
<div style="display:flex; justify-content: space-between; width:200px">
    <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary" %>
    <%= button_to "Delete", @friend, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger delete-button" %>
    <%= link_to 'Back', friends_path, class:"btn btn-dark" %>
  </div>